@model lab5.Models.Disease
@{
    ViewData["Title"] = "Details";
}
<h2>Подробности</h2>
<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.DiseaseName)</dt>
        <dd>@Html.DisplayFor(model => model.DiseaseName)</dd>
        <dt>@Html.DisplayNameFor(model => model.DiseaseSymptoms)</dt>
        <dd>@Html.DisplayFor(model => model.DiseaseSymptoms)</dd>
        <dt>@Html.DisplayNameFor(model => model.DiseaseDuration)</dt>
        <dd>@Html.DisplayFor(model => model.DiseaseDuration)</dd>
