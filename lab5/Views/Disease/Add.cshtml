@model lab5.Models.Disease
@{
    ViewData["Title"] = "Add";
}

<h2>Добавить</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DiseaseName" class="control-label"></label>
                <input asp-for="DiseaseName" class="form-control" />
                <span asp-validation-for="DiseaseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiseaseSymptoms" class="control-label"></label>
                <input asp-for="DiseaseSymptoms" class="form-control" />
                <span asp-validation-for="DiseaseSymptoms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiseaseDuration" class="control-label"></label>
                <input asp-for="DiseaseDuration" class="form-control" />
                <span asp-validation-for="DiseaseDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiseaseConsequences" class="control-label"></label>
                <input asp-for="DiseaseConsequences" class="form-control" />
                <span asp-validation-for="DiseaseConsequences" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>